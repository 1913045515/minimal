
.readlog-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}


.userinfo {
  display: flex;
  flex-direction: row;
  background-color: #5CE1E6;
  padding-left:45%;
  height: 280rpx;
  width: 100%;
}

.userinfo-avatar {
  width: 135rpx;
  height: 135rpx;
  margin: 40rpx 0 25rpx;
  border-radius: 50%;
  border: 12rpx solid rgba(255, 255, 255, 0.3);
}

.userinfo-editor {
  margin-left: 30rpx; 
  margin-top: 65rpx;
}

.userinfo-nickname {
  color: #fff;
  font-size: 45rpx;
}

.userinfo-coin{
  color: #fff;
  font-size: 30rpx;
}

.feedback-button {
  opacity: 0;
  position: absolute;
  width: 100vw;
  height: 50%;
  margin: 0;
  padding: 0;
  top: 0;
  left: 0;
}

.contact-button {
  opacity: 0;
  position: absolute;
  width: 100vw;
  height: 50%;
  margin: 0;
  padding: 0;
  bottom: 0;
  left: 0;
}


.user-cell{
  width: 100%;
  padding-top: 10px;
  background-color: #eeeeee;
}

.font-class{
  color:#FF0000
}

